<div class="saint-filter_label">
  <%= label -%>
</div>
<input type="text" name="<%= query_string %>" value="<%== @val || @type_values %>"
       style="width: 200px;"
       onkeyup="<% if (dependant_filters =  @setup.dependant_filters).size > 0 -%>
               $('<%= dependant_filters.map{|f| "##{f.id + @seed}-input"}.join(',') %>').remove();
               var query_string = $(this).closest('form').serialize();
               <% dependant_filters.each do |filter| -%>
               $.get( '<%= @setup.node.http.route(:filter, filter.column, @seed) %>',
                       query_string,
                       function(response){ $('#<%= filter.id + @seed %>').html(response); }
                       );
               <% end -%>
               <% end -%>
       "
/>
