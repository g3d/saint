<% label_id = ["saint-input-checkbox", @element.name.to_s, @row_id.to_s, @row_val.to_s.gsub(/[^\w|\d]/im, "_")].join("-") %>
<input type="checkbox" name="<%= @element.name %>" id="<%= label_id %>" value="1"
       style="<%= @element.css_style %>" class="<%= @element.css_class %>"
       <%= "checked" if @row_val -%>
/>
<label for="<%= label_id %>">
  <%= @element.label(@row) %>
</label>
