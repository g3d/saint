<%= grid.opts[:header] -%>
<table style="width: 100%;">
  <tbody>
  <tr class="grid-row">
    <% tdn, tdc, last_el = grid.columns, 0, elements.keys.last
       elements.each_pair do |el, el_html|
           width = el.grid_width -%>

        <td class="grid-column topped" style="<%= ('width: %s;' % width) if width %>">
          <fieldset style="<%= el.layout_style %>" class="<%= el.layout_class %>">
            <legend><%= el.label %></legend>
            <%= el_html %>
          </fieldset>
        </td>

        <% if (tdc += 1) == tdn
               tdc = 0 -%>
            </tr>
            <tr>
        <% end -%>

    <% end -%>
    </tr>
  </tbody>
    </table>
<%= grid.opts[:footer] -%>
