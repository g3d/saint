<form action="<%= http.route(:rename, @query_string) %>" method="post" id="saint-fm-forms-rename">
  <input type="text" name="name" value="<%= File.basename(path) -%>" class="disable_enter_key saint-input-medium"/>
  <a class="btn topped void-link"
     onclick="Saint.submit_valid_form('saint-fm-forms-rename', function(response){window.location=response.location});">
    rename
  </a>
  <input type="hidden" name="path" value="<%= path -%>"/>
</form>
