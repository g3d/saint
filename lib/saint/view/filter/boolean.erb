<% options = {1 => 'Yes', 0 => 'No'} -%>
<div class="saint-filter_label"><%= label -%></div>
<select name="<%= @setup.query_string %>" id="<%= @id %>-input"
        data-placeholder=' any '
        class="saint-ui-chosen" style="width: 100px;">
  <option value=""></option>
  <% options.each_pair do |value, label|
      selected = @val == value -%>
      <option value="<%= value %>" <%= 'selected' if selected %>>
        <%= label %>
      </option>
  <% end -%>
</select>
