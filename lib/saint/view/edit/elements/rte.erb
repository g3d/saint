<textarea name="<%= element.name %>" id="<%= element.id %>" style="<%= element.css_style %>" class="<%= element.css_class %>"><%= value || element.default %></textarea>
<script type="text/javascript">
    $(function() {
        $('#<%= element.id %>').elrte({<%= [('width: "%s"' % element.width if element.width), ('height: "%s"' % element.height if element.height) ].compact.join(', ') -%>});
    });
</script>
<%= Saint::FileServer.assets { cd 'vendor/elrte/'; css 'css/elrte.min.css'; js 'js/elrte.min.js' } %>
